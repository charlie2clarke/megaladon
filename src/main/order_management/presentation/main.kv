#:kivy 1.11.0
#:include order_management/presentation/order_management_screen/order_management_ui.kv
# Having to use v1.11.0 because of bug relating to MDDataTable

# Toolbar is made a dynamic widget so that when a new screen is added, the toolbar can be
# incorporated just by doing Toolbar:
<Toolbar@AnchorLayout>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MDToolbar:
            title: 'Order Management App'
            specific_text_color: app.theme_cls.accent_color
            right_action_items: [['help-circle', lambda x: app.handle_menu_click()]]
            elevation: 9

ScreenManager:
    OrderManagementScreen:
        Toolbar:
